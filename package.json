{
  "name": "mirror",
  "version": "0.1.0",
  "description": "MIRROR helps you understand yourself at all levels with a simple, intuitive CLI interface and programmatic library. A Mindfulness DevTool for the world.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "mirror": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc-alias && chmod +x dist/cli.js",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate": "npm run type-check && npm run test",
    "lint": "echo 'Linting skipped - using TypeScript compiler for validation'",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run validate"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mindfulness",
    "cli",
    "typescript",
    "devtool",
    "self-awareness",
    "meditation"
  ],
  "author": "The Hackers Playbook Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thehackersplaybook/mirror.git"
  },
  "bugs": {
    "url": "https://github.com/thehackersplaybook/mirror/issues"
  },
  "homepage": "https://github.com/thehackersplaybook/mirror#readme",
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.15.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "figlet": "^1.8.2",
    "inquirer": "^9.2.0"
  }
}
